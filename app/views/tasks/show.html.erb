
  <div class="task">
    <div class="task-title">
      タスク内容
    </div>

    <%# <%= render 'shared/error_messages', model: f.object %>
    <div class="new-task">
      <div class="weight-bold-text">
        タスク名
        <span class="indispensable">必須</span>
      </div>
      <div class="detail-tasks-text">
        <%= @task.content %>
      </div>
      <div class="detail-tasks-explain">
        <div class="weight-bold-text">
          タスクの説明
        </div>
        <div class="detail-tasks-text">
          <%= @task.description %>
        </div>
      </div>
      <div class="img-upload">
        <div class="click-upload">
          <p class="weight-bold-text">画像</p>
        </div>
          <%= image_tag @task.image, class: "image-box" if @task.image.attached? %>
      </div>
      <div class="btn">
        <%= link_to "編集", edit_group_task_path(@group_id, @task), data: {"turbolinks" => false}, class:"edit-btn" %>
        <%= link_to "削除", group_task_path(@group_id, @task), method: :delete, class:"delete-btn" %>
        <%= link_to "戻る", group_tasks_path, data: {"turbolinks" => false}, class:"back-btn"%>
      </div>
    </div>    
  </div>
